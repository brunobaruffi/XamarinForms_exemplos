<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exemplo3.paginas.ohm"
             Title="Lei de Ohm">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="LightBlue">
                <Label Text="Tensão:"/>
                <Entry x:Name="txt_tensao"/>
                <Label Text="Resistencia:"/>
                <Entry x:Name="txt_resistencia"/>
                <Button Text="Calcular" x:Name="btn_calcular"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>