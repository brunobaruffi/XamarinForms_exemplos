<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exemplo3.paginas.media_escola"
             Title="Media">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="LightBlue">
                <Label Text="Media" FontSize="20" VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
                <Label Text="Trabalho:"/>
                <Entry x:Name="txt_trabalho"/>
                <Label Text="Apostila:"/>
                <Entry x:Name="txt_apostila"/>
                <Label Text="TIC:"/>
                <Entry x:Name="txt_tic"/>
                <Label Text="Prova:"/>
                <Entry x:Name="txt_prova"/>
                <Button Text="Calcular" x:Name="btn_calcular"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>